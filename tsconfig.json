{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["dom", "esnext"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "jsx": "react-jsx",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "removeComments": true,
    "declaration": true,
    "declarationDir": "./types",
    "emitDeclarationOnly": false,
    "typeRoots": ["./src/types"],
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
